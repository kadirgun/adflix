server {
  listen 80;
  listen [::]:80;
  
  server_name {{ SERVER_NAMES }} {{ CLIENT_NAMES }};

  return 301 https://$host$request_uri;
}

map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name {{ SERVER_NAMES }};
    server_tokens off;
    root {{ PWD }}/server/public;
 
    index index.php;
 
    charset utf-8;
 
    location /index.php {
        try_files /not_exists @octane;
    }
 
    location / {
        try_files $uri $uri/ @octane;
    }

    location /build {
        add_header Cache-Control "public, max-age=31536000";
    }

    location /storage/cdn {
        add_header Cache-Control "public, max-age=31536000";
    }

    location ~* \.(wasm)$ {
        default_type application/wasm;
    }
 
    location = /favicon.ico { access_log off; log_not_found off; }

    access_log off;
    error_log  off;
    log_not_found off;

    error_page 404 /index.php;

    ssl_certificate {{ PWD }}/config/ssl/cert.crt;
    ssl_certificate_key {{ PWD }}/config/ssl/cert.key;    
    ssl_session_timeout 5m;   
    ssl_protocols SSLv3 TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers "HIGH:!aNULL:!MD5 or HIGH:!aNULL:!MD5:!3DES";
    ssl_prefer_server_ciphers on;
 
    location @octane {
        set $suffix "";
 
        if ($uri = /index.php) {
            set $suffix ?$query_string;
        }
 
        proxy_http_version 1.1;
        proxy_set_header Host $http_host;
        proxy_set_header Scheme $scheme;
        proxy_set_header SERVER_PORT $server_port;
        proxy_set_header REMOTE_ADDR $remote_addr;
        proxy_set_header X-Forwarded-For $http_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
 
        proxy_pass http://127.0.0.1:{{DOCKER_SERVER_PORT}}$suffix;
    }
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name {{ CLIENT_NAMES }};

    ssl_certificate {{ PWD }}/config/ssl/cert.crt;
    ssl_certificate_key {{ PWD }}/config/ssl/cert.key;
    ssl_session_timeout 5m;
    ssl_protocols SSLv3 TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers "HIGH:!aNULL:!MD5 or HIGH:!aNULL:!MD5:!3DES";
    ssl_prefer_server_ciphers on;

    location / {
        proxy_http_version 1.1;
        proxy_set_header Host $http_host;
        proxy_set_header Scheme $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        proxy_pass http://127.0.0.1:{{ DOCKER_NEXT_PORT }};
    }
}