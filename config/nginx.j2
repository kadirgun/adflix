server {
    listen 443 ssl;
    listen [::]:443 ssl;
    include /var/www/appliar/server/names.conf;
    server_tokens off;
    root /var/www/appliar/backend/public;
 
    index index.php;
 
    charset utf-8;
 
    location /index.php {
        try_files /not_exists @octane;
    }
 
    location / {
        try_files $uri $uri/ @octane;
    }

    location /build {
        add_header Cache-Control "public, max-age=31536000";
    }

    location /storage/cdn {
        add_header Cache-Control "public, max-age=31536000";
    }
 
    location = /favicon.ico { access_log off; log_not_found off; }

    access_log off;
    error_log  off;
    log_not_found off;

    error_page 404 /index.php;

    ssl_certificate /var/www/appliar/server/ssl/cert.crt;
    ssl_certificate_key /var/www/appliar/server/ssl/cert.key;    
    ssl_session_timeout 5m;   
    ssl_protocols SSLv3 TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers "HIGH:!aNULL:!MD5 or HIGH:!aNULL:!MD5:!3DES";
    ssl_prefer_server_ciphers on;
 
    location @octane {
        set $suffix "";
 
        if ($uri = /index.php) {
            set $suffix ?$query_string;
        }
 
        proxy_http_version 1.1;
        proxy_set_header Host $http_host;
        proxy_set_header Scheme $scheme;
        proxy_set_header SERVER_PORT $server_port;
        proxy_set_header REMOTE_ADDR $remote_addr;
        proxy_set_header X-Forwarded-For $http_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
 
        proxy_pass http://127.0.0.1:{{DOCKER_SERVER_PORT}}$suffix;
    }
}